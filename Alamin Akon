    </div>
    
    <script>
        // Initialize variables
        let currentSection = 0;
        const totalSections = 7;
        const container = document.getElementById('container');
        const navDots = document.querySelectorAll('.nav-dot');
        const mobileNavDots = document.querySelectorAll('.mobile-nav-dot');
        const currentPageSpan = document.getElementById('current-page');
        const progressBar = document.querySelector('.progress-bar');
        const cursor = document.querySelector('.cursor');
        const cursorTrail = document.querySelector('.cursor-trail');
        const loading = document.getElementById('loading');
        const mobileMenuBtn = document.getElementById('mobileMenuBtn');
        const mobileNav = document.getElementById('mobileNav');
        
        // Create particles
        function createParticles() {
            const particlesContainer = document.getElementById('particles');
            const particleCount = window.innerWidth <= 768 ? 30 : 50;
            for (let i = 0; i < particleCount; i++) {
                const particle = document.createElement('div');
                particle.className = 'particle';
                particle.style.left = Math.random() * 100 + '%';
                particle.style.animationDelay = Math.random() * 20 + 's';
                particle.style.animationDuration = (Math.random() * 10 + 15) + 's';
                particlesContainer.appendChild(particle);
            }
        }
        
        // Cursor movement
        document.addEventListener('mousemove', (e) => {
            cursor.style.left = e.clientX - 10 + 'px';
            cursor.style.top = e.clientY - 10 + 'px';
            setTimeout(() => {
                cursorTrail.style.left = e.clientX - 5 + 'px';
                cursorTrail.style.top = e.clientY - 5 + 'px';
            }, 80);
        }, { passive: true });
        
        // Cursor hover effects
        document.querySelectorAll('a, .nav-dot, .mobile-nav-dot, .premium-card, .mobile-menu-btn, .skill-tag, .contact-form input, .contact-form textarea, .contact-form button').forEach(el => {
            el.addEventListener('mouseenter', () => cursor.classList.add('hover'));
            el.addEventListener('mouseleave', () => cursor.classList.remove('hover'));
        });
        
        // Mobile menu toggle
        mobileMenuBtn.addEventListener('click', () => {
            mobileMenuBtn.classList.toggle('active');
            mobileNav.classList.toggle('active');
        });
        
        // Update navigation
        function updateNavigation() {
            navDots.forEach((dot, index) => {
                dot.classList.toggle('active', index === currentSection);
                dot.setAttribute('aria-current', index === currentSection ? 'true' : 'false');
            });
            mobileNavDots.forEach((dot, index) => {
                dot.classList.toggle('active', index === currentSection);
                dot.setAttribute('aria-current', index === currentSection ? 'true' : 'false');
            });
            currentPageSpan.textContent = String(currentSection + 1).padStart(2, '0');
            progressBar.style.width = ((currentSection + 1) / totalSections) * 100 + '%';
            if (mobileNav.classList.contains('active')) {
                mobileMenuBtn.classList.remove('active');
                mobileNav.classList.remove('active');
            }
        }
        
        // Navigate to section
        function goToSection(sectionIndex) {
            if (sectionIndex >= 0 && sectionIndex < totalSections) {
                currentSection = sectionIndex;
                container.style.transform = `translateX(-${currentSection * 100}vw)`;
                updateNavigation();
                const currentContent = document.querySelectorAll('.section')[currentSection].querySelector('.content');
                currentContent.style.animation = 'none';
                setTimeout(() => {
                    currentContent.style.animation = 'content-entrance 1s cubic-bezier(0.25, 0.46, 0.45, 0.94)';
                }, 50);
            }
        }
        
        // Mouse wheel navigation
        let isScrolling = false;
        let scrollTimeout;
        document.addEventListener('wheel', (e) => {
            if (isScrolling) return;
            clearTimeout(scrollTimeout);
            isScrolling = true;
            scrollTimeout = setTimeout(() => {
                isScrolling = false;
            }, 800);
            if (e.deltaY > 0 && currentSection < totalSections - 1) {
                goToSection(currentSection + 1);
            } else if (e.deltaY < 0 && currentSection > 0) {
                goToSection(currentSection - 1);
            }
        }, { passive: true });
        
        // Navigation dots
        navDots.forEach((dot, index) => {
            dot.addEventListener('click', () => goToSection(index));
            dot.addEventListener('keydown', (e) => {
                if (e.key === 'Enter' || e.key === ' ') {
                    e.preventDefault();
                    goToSection(index);
                }
            });
        });
        
        // Mobile navigation dots
        mobileNavDots.forEach((dot, index) => {
            dot.addEventListener('click', (e) => {
                e.preventDefault();
                goToSection(index);
            });
            dot.addEventListener('keydown', (e) => {
                if (e.key === 'Enter' || e.key === ' ') {
                    e.preventDefault();
                    goToSection(index);
                }
            });
        });
        
        // Keyboard navigation
        document.addEventListener('keydown', (e) => {
            if (e.key === 'ArrowRight' && currentSection < totalSections - 1) {
                goToSection(currentSection + 1);
            } else if (e.key === 'ArrowLeft' && currentSection > 0) {
                goToSection(currentSection - 1);
            }
        });
        
        // Touch/swipe support
        let startX = 0, endX = 0, startY = 0, endY = 0;
        document.addEventListener('touchstart', (e) => {
            startX = e.touches[0].clientX;
            startY = e.touches[0].clientY;
        }, { passive: true });
        
        document.addEventListener('touchend', (e) => {
            endX = e.changedTouches[0].clientX;
            endY = e.changedTouches[0].clientY;
            handleSwipe();
        }, { passive: true });
        
        function handleSwipe() {
            const swipeThreshold = 60;
            const diffX = startX - endX;
            const diffY = Math.abs(startY - endY);
            if (Math.abs(diffX) > swipeThreshold && diffY < 80) {
                if (diffX > 0 && currentSection < totalSections - 1) {
                    goToSection(currentSection + 1);
                } else if (diffX < 0 && currentSection > 0) {
                    goToSection(currentSection - 1);
                }
            }
        }
        
        // Button interactions
        document.querySelectorAll('.btn').forEach(btn => {
            btn.addEventListener('click', (e) => {
                if (btn.hasAttribute('data-section')) {
                    e.preventDefault();
                    const sectionIndex = parseInt(btn.getAttribute('data-section'));
                    goToSection(sectionIndex);
                }
                const ripple = document.createElement('span');
                const rect = btn.getBoundingClientRect();
                const size = Math.max(rect.width, rect.height);
                const x = e.clientX - rect.left - size / 2;
                const y = e.clientY - rect.top - size / 2;
                ripple.style.cssText = `
                    position: absolute;
                    width: ${size}px;
                    height: ${size}px;
                    left: ${x}px;
                    top: ${y}px;
                    background: rgba(255,255,255,0.3);
                    border-radius: 50%;
                    transform: scale(0);
                    animation: ripple 0.5s ease-out;
                    pointer-events: none;
                `;
                btn.appendChild(ripple);
                setTimeout(() => ripple.remove(), 500);
            });
        });
        
        // Ripple animation
        const style = document.createElement('style');
        style.textContent = `
            @keyframes ripple {
                to { transform: scale(2); opacity: 0; }
            }
        `;
        document.head.appendChild(style);
        
        // Initialize
        function init() {
            createParticles();
            updateNavigation();
            setTimeout(() => {
                loading.classList.add('hidden');
            }, 1200);
        }
        
        window.addEventListener('load', init);
        document.documentElement.style.scrollBehavior = 'smooth';
    </script>
</body>
</html>
